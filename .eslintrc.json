{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "chrome": "readonly",
    "$": "readonly",
    "jQuery": "readonly",
    "drawBarcode": "readonly",
    "Base64": "readonly",
    "sprintf": "readonly"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "eqeqeq": ["error", "always"],
    "no-var": "warn",
    "prefer-const": "warn",
    "no-undef": "error",
    "no-inner-declarations": "off"
  }
}
